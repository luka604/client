<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Separator?>

<VBox spacing="15" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.raflab.studsluzbadesktopclient.controllers.UpisPredmetaController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Upis studenta na predmet" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Separator/>

    <Label text="Upisi studenta na predmet:" style="-fx-font-weight: bold;"/>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Broj indeksa:"/>
        <TextField fx:id="brojIndeksaTf" prefWidth="150" promptText="npr. 1/2023"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Predmet:"/>
        <ComboBox fx:id="predmetCb" prefWidth="300"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Skolska godina:"/>
        <ComboBox fx:id="skolskaGodinaCb" prefWidth="200"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button onAction="#handleUpisiStudenta" text="Upisi na predmet" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>

    <Label fx:id="statusLabel" style="-fx-text-fill: green;"/>

    <Separator/>

    <Label text="Predmeti koje student slusa:" style="-fx-font-weight: bold;"/>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Broj indeksa:"/>
        <TextField fx:id="pretraziIndeksTf" prefWidth="150" promptText="npr. 1/2023"/>
        <Button onAction="#handlePretraziPredmete" text="Pretrazi"/>
    </HBox>

    <TableView fx:id="tabelaPredmeti" prefHeight="250" prefWidth="550">
        <columns>
            <TableColumn prefWidth="100" text="Sifra predmeta">
                <cellValueFactory>
                    <PropertyValueFactory property="predmetSifra"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="300" text="Naziv predmeta">
                <cellValueFactory>
                    <PropertyValueFactory property="predmetNaziv"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</VBox>
